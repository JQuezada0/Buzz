<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/person_icon_graybg"
            android:id="@+id/image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Stephen Curry"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:id="@+id/profile_name"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="2 minutes ago"
                android:ellipsize="end"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:id="@+id/profile_locale"
                android:textColor="@color/moby_blue"/>

            <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left|bottom"
                    android:text="Hey, do you think I could borrow a wrench?"
                    android:id="@+id/profile_post_count"
                    android:textColor="@color/moby_gray"/>

            </TableRow>


        </LinearLayout>

    </TableRow>

</LinearLayout>