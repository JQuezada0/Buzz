<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/post_status_layout_profileimage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/post_status_layout_profile_button"
            android:clickable="true"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxWidth="200dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stephen Curry"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:id="@+id/post_status_layout_username"/>

<!--                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Stephen Curry"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/moby_gray"
                    android:id="@+id/post_status_layout_username_small"/> -->

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/location_icon"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="Oracle Arena"
                    android:id="@+id/post_status_layout_locale"
                    android:textColor="@color/moby_blue"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="4184 km away"
                    android:id="@+id/post_status_layout_distance"
                    android:textColor="@color/moby_gray"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="7 min"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/post_status_layout_timestamp"
                    android:textColor="@color/moby_gray"/>

            </TableRow>


        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:id="@+id/post_status_layout_upvote_button"
            android:layout_gravity="right">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:gravity="center">

                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_gravity="right"
                    android:id="@+id/post_status_layout_upvote_icon"
                    android:src="@drawable/upvote_icon">

                </ImageView>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="147"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/post_status_layout_upvote_count"
                    android:textColor="@color/moby_blue"/>

            </LinearLayout>

        </FrameLayout>

        </TableRow>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="35sp"
        android:id="@+id/post_status_layout_text"
        android:textColor="@android:color/black"
        android:text="sample text"/>


</FrameLayout>